{
  "name": "pune-traffic-analytics",
  "version": "2.1.0",
  "description": "Enterprise-grade traffic analytics platform providing real-time insights and AI-powered recommendations for smart mobility decisions in Pune, India",
  "main": "index.html",
  "type": "module",
  "keywords": [
    "traffic-analytics",
    "pune",
    "data-visualization",
    "smart-city",
    "transportation",
    "real-time-data",
    "dashboard",
    "chart-js",
    "urban-mobility",
    "traffic-congestion"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@domain.com",
    "url": "https://yourportfolio.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/pune-traffic-analytics.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/pune-traffic-analytics/issues"
  },
  "homepage": "https://yourusername.github.io/pune-traffic-analytics",
  "scripts": {
    "dev": "vite serve --port 3000 --host",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "deploy": "npm run build && gh-pages -d dist",
    "data:collect": "python scripts/data-collection/traffic-simulator.py",
    "data:analyze": "python scripts/analysis/traffic-analysis.py",
    "data:validate": "python scripts/utils/data-validator.py",
    "serve": "python -m http.server 8000",
    "lighthouse": "lighthouse http://localhost:8000 --output=html --output-path=./lighthouse-report.html",
    "size-analysis": "bundlesize",
    "clean": "rm -rf dist node_modules .cache",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@types/chart.js": "^2.9.37",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-legacy": "^4.1.0",
    "autoprefixer": "^10.4.14",
    "bundlesize": "^0.18.1",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.3",
    "lighthouse": "^10.4.0",
    "lint-staged": "^13.2.3",
    "postcss": "^8.4.24",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.1.6",
    "vite": "^4.4.0",
    "vite-plugin-pwa": "^0.16.4",
    "vitest": "^0.33.0",
    "@vitest/ui": "^0.33.0",
    "jsdom": "^22.1.0"
  },
  "dependencies": {
    "chart.js": "^3.9.1",
    "date-fns": "^2.30.0",
    "lodash-es": "^4.17.21"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "bundlesize": [
    {
      "path": "./dist/assets/*.js",
      "maxSize": "150 kB"
    },
    {
      "path": "./dist/assets/*.css",
      "maxSize": "50 kB"
    }
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,html,json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "pwa": {
    "name": "Pune Traffic Analytics",
    "short_name": "PuneTraffic",
    "description": "Real-time traffic analytics for Pune city",
    "theme_color": "#3b82f6",
    "background_color": "#ffffff",
    "display": "standalone",
    "start_url": "/",
    "icons": [
      {
        "src": "assets/images/icons/icon-192x192.png",
        "sizes": "192x192",
        "type": "image/png"
      },
      {
        "src": "assets/images/icons/icon-512x512.png",
        "sizes": "512x512",
        "type": "image/png"
      }
    ]
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/yourusername"
  }
}